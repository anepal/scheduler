-form_for(@department, :html => { :multipart => true }) do |f|
    = f.label :full_name, "Name:"
    %br
    = f.text_field :name
    %br
    = f.label :address, "Address:"
    %br
    = f.text_area :address
    %br
    = f.label :phone, "Phone:"
    %br
    = f.text_field :phone
    %br
    %br
    = f.submit btn, {:class=>'submit_btn'}