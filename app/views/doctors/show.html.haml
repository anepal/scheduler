.maincont
  %h3= 'Show doctor'
  %div
    =flash[:notice]

  %p
    = label_tag "Full name:"
    = @doctor.full_name
  %p
    = label_tag "Address:"
    = @doctor.address
  %p
    = label_tag "Phone:"
    = @doctor.phone
  %p
    = label_tag "Email:"
    = @doctor.email
  %br
  %br
  %p
    = link_to 'Edit', edit_doctor_path(@doctor)
