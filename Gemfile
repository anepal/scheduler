source :rubygems

gem 'rails', '2.3.2'
gem "haml", '3.0.18'
gem 'mysql', '2.8.1'
gem 'inherited_resources', '1.0.6'
gem 'mongrel', '1.1.5'

group :test do
  gem "rspec", ">=1.2.2"
  gem "rspec-rails", ">=1.2.2"
  gem "webrat", ">=0.4.3"
  gem "cucumber", ">=0.2.2"

  gem 'ruby-debug'

  # Never use fixtures (if you can help it).  Instead use
  # a factory pattern to generate test objects.
  gem 'factory_girl', '1.3.2'

  # Remarkable gives you common rspec matchers so you can assert
  # things like should validate_presence_of :name, and 
  # should belong_to :company, etc.
  gem 'remarkable', '3.1.13'
  gem 'remarkable_activerecord', '3.1.13'
  gem 'remarkable_rails', '3.1.13'
end
